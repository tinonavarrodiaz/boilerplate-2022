---
import '../scss/styles.scss';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
export interface Props {
  title: string;
  page: string;
}

const { title, page } = Astro.props as Props;
---

<!DOCTYPE html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/png" href="/favicon.png" />
    <meta name="description" content="Ház que el mundo te vea" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>

    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content="https://nh-digital.dev/" />
    <meta property="og:title" content="NH Digital" />
    <meta property="og:description" content="Ház que el mundo te vea" />
    <meta property="og:image" content="https://i.ibb.co/TgqjMPh/portada.jpg" />

    <!-- Twitter -->
    <meta property="twitter:card" content="summary_large_image" />
    <meta property="twitter:url" content="https://nh-digital.dev/" />
    <meta property="twitter:title" content="NH Digital" />
    <meta property="twitter:description" content="Ház que el mundo te vea" />
    <meta
      property="twitter:image"
      content="https://i.ibb.co/TgqjMPh/portada.jpg"
    />
  </head>
  <body class={page}>
    <Header page={page} />
    <main class="main" id="main">
      <slot />
    </main>
    <Footer />
    <style>
      :root {
        --astro-gradient: linear-gradient(0deg, #4f39fa, #da62c4);
      }
      main {
        margin: auto;
        padding: 1em;
        max-width: 60ch;
      }
    </style>
  </body>
</html>
